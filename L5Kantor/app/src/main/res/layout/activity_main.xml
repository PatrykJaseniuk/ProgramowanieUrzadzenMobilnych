<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ButtonWaluta1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <EditText
        android:id="@+id/editTextWaluta1"
        android:layout_width="100dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/buttonWaluta1"
        app:layout_constraintTop_toBottomOf="@+id/buttonWaluta1" />

    <Button
        android:id="@+id/buttonWaluta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onButtonClickWybierzWaluteDoSprzedania"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/buttonWaluta2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonWaluta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClickWybierzWaluteWybierzWaluteDoKupna"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonWaluta1"
        app:layout_constraintTop_toTopOf="@+id/buttonWaluta1" />

    <Button
        android:id="@+id/buttonAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:onClick="onButtonClickAdmin"
        android:text="Adnim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextWaluta1" />

    <TextView
        android:id="@+id/textViewIloscPieniedzyOtrzymanych"
        android:layout_width="101dp"
        android:layout_height="54dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/buttonWaluta2"
        app:layout_constraintTop_toTopOf="@+id/editTextWaluta1" />

</androidx.constraintlayout.widget.ConstraintLayout>